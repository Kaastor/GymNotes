<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/list_item_exercises_exercise"
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.24"
        android:gravity="center"
        android:minHeight="@dimen/fab_margin"

        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_exercises_series_text"
        android:layout_width="99dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/list_item_exercises_exercise"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="15sp"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:text="Serie: "
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_exercises_exercise" />

    <TextView
        android:id="@+id/list_item_exercises_series"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/list_item_exercises_series_text"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/list_item_exercises_series_text"
        app:layout_constraintTop_toBottomOf="@+id/list_item_exercises_exercise" />

    <TextView
        android:id="@+id/list_item_exercises_reps_text"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_below="@+id/list_item_exercises_exercise"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/list_item_exercises_series"
        android:gravity="center"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:text="PowtÃ³rzenia: "
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/list_item_exercises_series"
        app:layout_constraintTop_toBottomOf="@+id/list_item_exercises_exercise" />

    <TextView
        android:id="@+id/list_item_exercises_reps"
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:layout_below="@+id/list_item_exercises_exercise"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/list_item_exercises_reps_text"
        android:gravity="center"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/list_item_exercises_reps_text"
        app:layout_constraintTop_toBottomOf="@+id/list_item_exercises_exercise" />
</android.support.constraint.ConstraintLayout>